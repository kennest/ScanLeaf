<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lin1"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Images analysées"
            android:textColor="#ededed"
            android:textSize="19dp"
            android:textStyle="bold" />
        <GridView
            android:id="@+id/analysed_img"
            android:layout_width="match_parent"
            android:layout_height="190dp">

        </GridView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lin2"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/img_clicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="▲ Cliquez une image pour voir son résultat ▼"
                android:textColor="#ededed"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="1- Symptôme xxx détecté à xx%"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="2- Symptôme xxx détecté à xx%"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/global_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:background="@drawable/arrondi_haut"
                android:gravity="center"
                android:text="Résultat global"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:textStyle="bold"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Swollen shoot fortement détecté comme maladie."
                android:textColor="@color/colorPrimaryPix"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cause"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingVertical="@dimen/text_margin"
                android:textColor="@color/black"
                android:text="Cela est dû à "
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/propagation"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingVertical="@dimen/text_margin"
                android:textColor="@color/black"
                android:text="Cette maladie risque de se propager dans la zone de "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/solution"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingVertical="@dimen/text_margin"
                android:textColor="@color/black"
                android:text="Pour soigner votre plante, il faut:
    -blablablabla blablablablabal blablablablab alblablablanlanla"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>