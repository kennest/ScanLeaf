<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#fff"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/radius"
>

    <com.glide.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/arrondi_haut"
        android:backgroundTint="#fff"/>
    <com.glide.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arrondi_bas"
        android:paddingVertical="5dp"
        android:backgroundTint="@color/colorPrimaryPix"
        android:weightSum="3">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:paddingRight="20dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:gravity="top"
            android:text="Disease"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/analyse_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="53 minute ago"
            android:textColor="#ededed"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="textEnd"/>
        <ImageButton
            android:id="@+id/seeAnalysis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/ic_eye"
            android:tint="@color/colorPrimary"
            android:layout_weight="1"
            android:foregroundGravity="right"
            android:background="@drawable/radius"
            android:backgroundTint="@color/white"
           android:layout_marginStart="60dp"
            android:layout_gravity="right"/>

    </LinearLayout>
</LinearLayout>