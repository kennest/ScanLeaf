<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wesicknessdect.example.org.wesicknessdetect.wesicknessdect.example.org.wesicknessdetect.activities.login.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed">

        <ImageView
            android:background="@drawable/background_gradient"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:layout_weight="1"
            android:background="@drawable/background_gradient_inv"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="180dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radius"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff">


        <TextView
            android:layout_marginTop="5dp"
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_mail"
            android:hint="vkouakou2019"
            android:text="lightbot78"
            android:fontFamily="@font/roboto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_secret"
            android:hint="******"
            android:text="748b0026-bbd"
            android:fontFamily="@font/roboto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebPassword"
            android:id="@+id/password" />

        <Button
            android:textColor="#FFF"
            android:background="@drawable/radius"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginsubmit" />

        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/radius"
            android:backgroundTint="@color/colorliht"
            android:textAllCaps="false"
            android:text="Pas encore inscrit?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gotosign" />

        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/radius"
            android:backgroundTint="@color/colorAccent"
            android:textAllCaps="false"
            android:text="Mot de passe oubliÃ©?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPassword" />
    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"
        android:padding="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tex"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:fontFamily="@font/roboto"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="Se connecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />


</RelativeLayout>